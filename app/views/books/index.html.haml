%p#notice= notice
= form_tag books_path, :method => :post do
  = text_field_tag :search_terms, nil, :size => "50", :placeholder => "Search a book by isbn, title, author,...", :id => 'search_box'
  = submit_tag 'Search', :id => 'search_button'
%table#books
  %thead
    %tr
      %th Top 10 Searched Books
      %th Top 10 Reviewed Books
  %tbody
    - @books.each do |book|
      %tr
        %td= link_to "'#{book.title}' by #{book.author}", book
        %td= link_to "'#{book.title}' by #{book.author}", book
